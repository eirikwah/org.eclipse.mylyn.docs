<project name="Build EPUB Model" default="build">

	<target name="build">
		<delete failonerror="false">
			<fileset dir="${basedir}/src/org/eclipse/mylyn/docs/epub/model">
				<include name="*/**" />
			</fileset>
		</delete>

		<eclipse.refreshLocal resource="${basedir}/src" depth="infinite" />

		<emf.Ecore2Java copyright="Copyright (c) 2011 Torkild U. Resheim" 
			reconcileGenModel="reload" 
			generateJavaCode="true" 
			model="${basedir}/model/epub.ecore" 
			genmodel="${basedir}/model/epub.genmodel" 
			modelproject="org.eclipse.mylyn.docs.epub" 
			modelprojectfragmentpath="src" />
	</target>

</project>
